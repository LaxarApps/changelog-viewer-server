{
   "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6,
      "ecmaFeatures": {}
   },
   "env": {
      "node": true,
      "es6": true
   },
   "rules": {
      "semi": 1,

      "no-console": 0,
      "no-const-assign": 2,
      "no-debugger": 2,
      "no-var": 1,
      "no-undef": 2,
      "no-unused-vars": 1,

      "prefer-const": 1
   }
}
